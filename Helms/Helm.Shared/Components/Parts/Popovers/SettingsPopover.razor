<MudTooltip Text="TO DO: Open Settings">
    <MudIconButton OnClick="Popover" Icon="@Icons.Material.Filled.Settings" />
</MudTooltip>

<MudPopover Open="@_openPopover" Fixed="true" Class="px-4 pt-4">
    <MudButton OnClick="Popover" StartIcon="@Icons.Material.Filled.Close"></MudButton>
</MudPopover>


@code {
    private bool _openPopover;

    private void Popover() => _openPopover = !_openPopover;
}